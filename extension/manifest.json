{
  "manifest_version": 2,
  "name": "Scraping Template Builder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://localhost:8080/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open Scraper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
