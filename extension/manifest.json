{
  "manifest_version": 2,
  "name": "Scraping Template Builder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://localhost:8080/"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
